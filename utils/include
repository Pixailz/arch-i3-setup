# CONFIG

## DIR

DIR_BASE="${PWD?}"
DIR_INC="$(cd ${BASH_SOURCE[0]%/*} && echo ${PWD})"
DIR_LOG="${DIR_BASE}"

## LOG

LOG_FILE="${DIR_LOG}/deepthought"

## ARCH

ARCH_KEYMAP="us"
ARCH_PART=(
	"/boot EFI 500M"
	"swap SWAP 8G"
	"/ LINUX"
)

# INCLUDE

source "${DIR_INC}/log"
source "${DIR_INC}/arch/setup"
source "${DIR_INC}/i3/setup"
